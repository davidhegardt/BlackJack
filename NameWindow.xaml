<Window x:Class="Black_Jack.NameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Black_Jack"
        mc:Ignorable="d"
        Title="NameWindow" Height="120" Width="260">
    <Grid x:Name="InputBox" Visibility="Visible">
        <Grid Background="Gainsboro" Opacity="0.5" />
        <Border
            MinWidth="250"
            Background="DarkSeaGreen"
            BorderThickness="2"
            CornerRadius="0,55,0,55"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Margin="5" x:Name="FieldInputType" Text="Player Name:" FontWeight="Bold" FontFamily="Cambria" />
                <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="InputName"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnOk" IsDefault="True" Margin="4" Content="OK" Style="{DynamicResource RoundedButton}" Width="30" Height="20" Click="btnOk_Click" />
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Window>
